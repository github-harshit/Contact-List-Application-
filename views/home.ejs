<html>
    <head>
 <title> <%= title %></title>
 <link rel="stylesheet" href="/css/style.css">
 <script src="https://kit.fontawesome.com/c92b5cf5c7.js" crossorigin="anonymous"></script>
    </head> 
    <body>
        <h1 id="page-heading"> <i class="fa-solid fa-address-book"></i>My Contact list </h1>
        <div class="container">
            <ul class="list">
                <%for(let i of contact_list){ %>
                    <li class="innerList">
                        <p><%=i.name%></p>
                        <p><%= i.phone %></p>
                        <a href="delete_contact/?id=<%=i.id%>" > <i  class="fa-solid fa-xmark cross"></i></a>
                    </li>


                <%}%>
            </ul>
        </div>
         <form action="create_contact" method="post">
        <div class="inputContainer">
           
           <input type="text" name="name" id="name" placeholder="Enter your name" required>
        <input type="number" name="phone" id="phone" placeholder="Enter your no" required >
        <button type="submit"  class="btn" >Add </button>
     
         


         </form>
         </div>
        <script src="/js/style.js"></script>
    </body>
</html>